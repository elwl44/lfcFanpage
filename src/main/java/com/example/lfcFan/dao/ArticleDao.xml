<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.lfcFan.dao.ArticleDao">
	<select id="getForPrintArticles" resultMap="article">
		SELECT A.*,
		M.loginId AS extra__writer
		FROM article AS A
		INNER JOIN
		member
		AS M
		ON A.memberId = M.id
		WHERE 1
		<if test="boardId != null">
			AND A.boardId = #{boardId}
		</if>
		<if test="searchKeyword != null">
			<if test="search_target == 'title_content'">
				AND (
				A.title LIKE CONCAT('%', #{searchKeyword}, '%')
				OR
				A.body LIKE CONCAT('%', #{searchKeyword}, '%')
				)
			</if>
			<if test="search_target == ''">
				AND A.title LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
			<if test="search_target == 'title'">
				AND A.title LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
			<if test="search_target == 'body'">
				AND A.body LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
			<if test="search_target == 'name'">
				AND m.name LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
			<if test="search_target == 'loginId'">
				AND m.loginId LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
		</if>

		ORDER BY A.id DESC
		<if test="limitFrom != null and limitTake != null">
			LIMIT #{limitFrom}, #{limitTake}
		</if>

	</select>

	<select id="getForPrintLeagues" resultType="League">
		SELECT *
		FROM
		LeagueTable
		ORDER BY point desc, goalGap DESC
	</select>

	<select id="getForPrintPlayers" resultType="Player">
		SELECT *
		FROM player
		ORDER BY backnumber asc
	</select>

	<select id="getForPrintMatch" resultType="MatchSchedule">
		SELECT *
		FROM matchschedule
		WHERE
		<if test="month != null">
			month = #{month}
		</if>
		ORDER BY date asc
	</select>

	<select id="getTotalCount" resultType="int">
		SELECT COUNT(*)
		FROM article AS A
		INNER JOIN member
		AS M
		ON A.memberId =
		M.id
		WHERE 1
		<if test="boardId != null">
			AND boardId = #{boardId}
		</if>
		<if test="searchKeyword != null">
			<if test="search_target == ''">
				AND A.title LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
			<if test="search_target == 'title_content'">
				and (title like CONCAT('%', #{searchKeyword}, '%')
				or body
				like CONCAT('%', #{searchKeyword}, '%'))
			</if>
			<if test="search_target == 'title'">
				AND A.title LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
			<if test="search_target == 'body'">
				AND A.body LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
			<if test="search_target == 'name'">
				AND m.name LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
			<if test="search_target == 'loginId'">
				AND m.loginId LIKE CONCAT('%', #{searchKeyword}, '%')
			</if>
		</if>
	</select>

	<insert id="writeArticle" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO article
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			<if test="title != null">
				title = #{title},
			</if>
			<if test="body != null">
				`body` = #{body},
			</if>
			<if test="memberId != null">
				`memberId` = #{memberId},
			</if>
			<if test="boardId != null">
				`boardId` = #{boardId},
			</if>
			`reading` = 0
		</set>
	</insert>

	<insert id="writePlayer" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO player
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			<if test="FirstName != null">
				FirstName = #{FirstName},
			</if>
			<if test="LastName != null">
				`LastName` = #{LastName},
			</if>
			<if test="BackNumber != null">
				`BackNumber` = #{BackNumber},
			</if>
			<if test="Position != null">
				`Position` = #{Position},
			</if>
			<if test="Nationality != null">
				`Nationality` = #{Nationality},
			</if>
			<if test="Height != null">
				`Height` = #{Height},
			</if>
			<if test="Weight != null">
				`Weight` = #{Weight},
			</if>
			<if test="dateofBirth != null">
				`dateofBirth` = #{dateofBirth},
			</if>
		</set>
	</insert>

	<insert id="writeMatch" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO matchschedule
		<set>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="date != null">
				`date` = #{date},
			</if>
			<if test="month != null">
				`month` = #{month},
			</if>
			<if test="time != null">
				`time` = #{time},
			</if>
			<if test="League != null">
				`league` = #{League},
			</if>
			<if test="venue != null">
				`venue` = #{venue},
			</if>
			<if test="stadium != null">
				`stadium` = #{stadium},
			</if>
		</set>
	</insert>

	<select id="getForPrintArticleById" resultMap="article">
		SELECT A.*,
		M.loginId AS extra__writer
		FROM article AS A
		INNER JOIN `member` AS M
		ON
		A.memberId = M.id
		WHERE A.id = #{id}
	</select>

	<select id="getForPrintPlayerById" resultType="Player">
		SELECT *
		FROM
		player
		WHERE
		id = #{id}
	</select>

	<select id="getForPrintLeagueById" resultType="League">
		SELECT *
		FROM
		leagueTable
		WHERE
		id = #{id}
	</select>

	<select id="getForPrintMatchById" resultType="MatchSchedule">
		SELECT *
		FROM
		matchschedule
		WHERE
		id = #{id}
	</select>

	<delete id="deleteArticleById">
		DELETE FROM article
		WHERE id = #{id}
	</delete>

	<delete id="deletePlayerById">
		DELETE FROM player
		WHERE id = #{id}
	</delete>

	<delete id="deleteMatchById">
		DELETE FROM matchschedule
		WHERE id = #{id}
	</delete>

	<update id="addArticleReading">
		update article
		<set>
			reading=reading+1
		</set>
		WHERE id = #{id}
	</update>

	<update id="modifyArticle">
		UPDATE article
		<set>
			updateDate = NOW(),
			<if test="title != null">
				title = #{title},
			</if>
			<if test="body != null">
				`body` = #{body},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<update id="modifyPlayer">
		UPDATE player
		<set>
			updateDate = NOW(),
			<if test="FirstName != null">
				FirstName = #{FirstName},
			</if>
			<if test="LastName != null">
				`LastName` = #{LastName},
			</if>
			<if test="BackNumber != null">
				`BackNumber` = #{BackNumber},
			</if>
			<if test="Position != null">
				`Position` = #{Position},
			</if>
			<if test="Nationality != null">
				`Nationality` = #{Nationality},
			</if>
			<if test="Height != null">
				`Height` = #{Height},
			</if>
			<if test="Weight != null">
				`Weight` = #{Weight},
			</if>
			<if test="dateofBirth != null">
				`dateofBirth` = #{dateofBirth},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<update id="modifyLeague">
		UPDATE leagueTable
		<set>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="game != null">
				`game` = #{game},
			</if>
			<if test="point != null">
				`point` = #{point},
			</if>
			<if test="win != null">
				`win` = #{win},
			</if>
			<if test="draw != null">
				`draw` = #{draw},
			</if>
			<if test="lose != null">
				`lose` = #{lose},
			</if>
			<if test="gainGoal != null">
				`gainGoal` = #{gainGoal},
			</if>
			<if test="loseGoal != null">
				`loseGoal` = #{loseGoal},
			</if>
			<if test="goalGap != null">
				`goalGap` = #{goalGap},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<update id="modifyMatch" >
		UPDATE matchschedule
		<set>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="date != null">
				`date` = #{date},
			</if>
			<if test="month != null">
				`month` = #{month},
			</if>
			<if test="time != null">
				`time` = #{time},
			</if>
			<if test="League != null">
				`league` = #{League},
			</if>
			<if test="venue != null">
				`venue` = #{venue},
			</if>
			<if test="stadium != null">
				`stadium` = #{stadium},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<select id="getBoardByCode" resultType="Board">
		SELECT *
		FROM board
		WHERE
		code = #{boardCode}
	</select>

	<resultMap type="Article" id="article">
		<id property="id" column="id" />
		<id property="regDate" column="regDate" />
		<id property="updateDate" column="updateDate" />
		<id property="memberId" column="memberId" />
		<id property="title" column="title" />
		<id property="body" column="body" />
		<id property="boardId" column="boardId" />
		<id property="reading" column="reading" />

		<association property="extra" javaType="map">
			<id property="writer" column="extra__writer" />
		</association>
	</resultMap>
</mapper>