<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.lfcFan.dao.ArticleDao">
	<select id="getArticles" resultType="Article">
		SELECT *
		FROM article
	</select>

	<insert id="writeArticle" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO article
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			<if test="title != null">
				title = #{title},
			</if>
			<if test="body != null">
				`body` = #{body},
			</if>
			<if test="reading != null">
				`reading` = #{reading},
			</if>
			<if test="writer != null">
				`writer` = #{writer},
			</if>
		</set>
	</insert>
</mapper>